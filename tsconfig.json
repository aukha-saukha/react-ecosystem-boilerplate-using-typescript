{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "react",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["dist", "node_modules", "tools"],
  "include": ["src"]
}
